<% provide(:title, "ユーザー登録") %>
<div id="sign_up_background">
  <div class="layout_body_signup">
    <div class="headtext-signup">
      <p>Signup</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group signup-form">
        <%= f.text_field :name, type: "name", class: "signup-textform", placeholder: "ユーザー名", autofocus: true %>
      </div>

      <div class="form-group signup-form">
        <%= f.email_field :email, class: "signup-textform", placeholder: "メールアドレス",autocomplete: "email" %>
      </div>

      <div class="form-group signup-form">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: "signup-textform", placeholder: "パスワード(8文字以上)", autocomplete: "new-password" %>
      </div>

      <div class="form-group signup-form">
        <%= f.password_field :password_confirmation, class: "signup-textform", placeholder: "パスワード(確認用)", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "button-basic button-signup" %>
      </div>
    <% end %>

    <p class="signup-bottom-link">または　<%= link_to 'ログイン', new_user_session_path %></p>
  </div>
</div>
