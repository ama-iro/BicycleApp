<% provide(:title, "プロフィール編集") %>
<div class="layout_background">
  <div class ="layout_body_useredit">
    <div class="headtext">
      <p>User Edit</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, type: "name",  autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :gender %><br />
        <%= f.select :gender, {'男性': 0, '女性': 1, 'その他': 2},
                          { include_blank: '選択してください'},
                          { required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :birthday %><br />
        <%= f.date_select :birthday, use_month_numbers: true,
                                     start_year: 1930,
                                     end_year: (Time.now.year - 10),
                                     default: Date.new(1990, 1, 1) %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction, type: "introduction" %>
      </div>

      <div class="actions">
        <%= f.submit "保存", class: "button-basic" %>
      </div>
    <% end %>

    <p> <%= button_to "ユーザーの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


  </div>
</div>
