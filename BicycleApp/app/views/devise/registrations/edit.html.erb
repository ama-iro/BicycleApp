<% provide(:title, "プロフィール編集") %>
<div class="show_background">
  <div class ="layout_body_usershow">
    <div class="headtext-useredit">
      <p>User Edit</p>
    </div>
    <div class="edit-field">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table id="edit-table">
          <tbody>
            <tr>
              <td class="edit-label"><span>ユーザー名</span></td>
              <td class="edit-input"><%= f.text_field :name, type: "name", class: "edit-textfield",  autofocus: true %></td>
            </tr>
            <tr>
              <td class="edit-label"><span>性別</span></td>
              <td class="edit-input"><label><%= f.radio_button :gender, 0 %>男性</label>
                                     <label><%= f.radio_button :gender, 1 %>女性</label>
                                     <label><%= f.radio_button :gender, 2 %>その他</label></td>
            </tr>
            <tr>
              <td class="edit-label"><span>生年月日</span></td>
              <td class="edit-input"><%= f.date_select :birthday, use_month_numbers: true,
                                           start_year: 1930,
                                           end_year: (Time.now.year - 10),
                                           default: Date.new(1990, 1, 1) %></td>
            </tr>
            <tr>
              <td><span>メールアドレス</span></td>
              <td><%= f.email_field :email, class: "edit-textfield", autocomplete: "email" %></td>
            </tr>
            <tr>
              <td valign="top"><span>自己紹介</span></td>
              <td><%= f.text_area :introduction, class: "text-field-introduction", type: "introduction" %></td>
            </tr>
          </tbody>
        </table>
        <div class="actions">
          <%= f.submit "保存", class: "button-basic button-edit" %>
        </div>
      <% end %>

      <p> <%= button_to "ユーザーの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>
