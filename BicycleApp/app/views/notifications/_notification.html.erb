<% user = User.find(notification.from_user_id) %>
<% post = Post.find(notification.post_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの料理が<%= link_to user.name, "/user/show/#{user.id}" %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの料理に<%= link_to user.name, "/user/show/#{user.id}" %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">

    <div class="col-md-7">
      <p><%= link_to post.title, post_path(post) %></p>
      <p><%= post.description %></p>
    </div>
  </div>
</li>
