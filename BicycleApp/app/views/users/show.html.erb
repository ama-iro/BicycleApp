<% provide(:title, "プロフィール") %>
<div class="show_background">
  <div class ="layout_body_usershow">
    <div class="user_show_top">
      <div class="plofile-name">
        <%= @user.name %>

      </div>
      <div class="show-image-introduction">
        <div class="show-image">
          <%= gravatar_for @user, size: 80, cl: "gravatar user-picture" %>
        </div>
        <div class="show-introduction">
          Birthday/<%= @user.birthday %><br>
          Age/<%= @age %><br>
        </div>
        <% if current_user.id == @user.id %>
          <div class="show-edit"><%= link_to 'プロフィール編集', edit_user_registration_path, class:"show-edit-button"%></div>
        <% end %>
      </div>
    </div>


    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true"></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">投稿</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">お気に入り</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= @user.introduction %>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        post
        <div class="row">
          <div class="col-md-9">
            <% if @user.posts.any? %>
              <h3>投稿 (<%= @user.posts.count %>)</h3>
              <ol class="posts">
                <%= render @post %>
              </ol>
              <%= will_paginate @post %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
        favo
        <p><%= link_to 'お気に入り', favorites_path %></p>
      </div>
    </div>






  </div>
</div>
