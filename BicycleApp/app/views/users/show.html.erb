<% provide(:title, "プロフィール") %>
<div class="show_background">
  <div class ="layout_body_usershow">
    <div class="user_show_top">
      <div class="plofile-name">
        <%= @user.name %>
      </div>
      <div class="show-image-introduction">
        <div class="show-image">
          <%= gravatar_for @user, size: 80, cl: "gravatar user-picture" %>
        </div>
        <div class="show-introduction">
          <i class="far fa-calendar-alt"></i> Birthday /<%= @user.birthday %><br>
          Age/<%= @age %><br>
        </div>
        <% if current_user.id == @user.id %>
          <div class="show-edit"><%= link_to 'プロフィール編集', edit_user_registration_path, class:"show-edit-button"%></div>
        <% end %>
      </div>
    </div>
    <div class="user-show-bottom">
      <ul class="nav nav-pills mb-3 nav-justified tab-color" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-aboutme-tab" data-toggle="pill" href="#pills-aboutme" role="tab" aria-controls="pills-aboutme" aria-selected="true">About me <i class="fas fa-user"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-posts-tab" data-toggle="pill" href="#pills-posts" role="tab" aria-controls="pills-posts" aria-selected="false">投稿 <i class="far fa-paper-plane"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-favorite-tab" data-toggle="pill" href="#pills-favorite" role="tab" aria-controls="pills-favorite" aria-selected="false">お気に入り <i class="fas fa-heart"></i></a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-aboutme" role="tabpanel" aria-labelledby="pills-home-tab">
          <%= @user.introduction %>
        </div>
        <div class="tab-pane fade" id="pills-posts" role="tabpanel" aria-labelledby="pills-profile-tab">
          <div class="row">
            <div class="col-md-9">
              <% if @user.posts.any? %>
                <h3>投稿 (<%= @user.posts.count %>)</h3>
                <ol class="posts">
                  <%= render @post %>
                </ol>
                <%= will_paginate @post %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-favorite" role="tabpanel" aria-labelledby="pills-contact-tab">
          favo
          <p><%= link_to 'お気に入り', favorites_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
